<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#325688"
    tools:context="com.example.yawar.historypet.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="3"
        android:scaleType="centerInside"
        android:src="@drawable/logo2"
        android:id="@+id/imageView"
        android:layout_height="0dp" />

    <EditText
        android:id="@+id/corroInicio"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:hint="Correo electrónico"
        android:textColorHint="#FFF"
        android:inputType="textEmailAddress"
        android:theme="@style/BlackLine"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/passwordInicio"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:hint="Contraseña"
        android:textColorHint="#FFF"
        android:inputType="textPassword"
        android:theme="@style/BlackLine"
        android:layout_height="0dp" />
    <Button
        android:text="Entrar"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:backgroundTint="#5486B8"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Crear nueva cuenta"
        android:padding="20dp"
        android:textColor="#FFF"/>
</LinearLayout>
